{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
     "@application/*": ["./src/application/*"],
     "@domain/*": ["./src/domain/*"],
     "@infrastructure/*": ["./src/infrastructure/*"],
     "@presentation/*": ["./src/presentation/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}